<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dylan.licence.mapper.RoleAccessMapper">
<!--    <resultMap id="systemRoleMap" type="com.dylan.licence.entity.Role">-->
<!--    </resultMap>-->

    <sql id="TableField">
        id, access_id, role_id, created_at, updated_at, del_flag
    </sql>

    <sql id="TableName">
        `role_access`
    </sql>

    <select id="getAccessIds4Role" resultType="java.lang.Integer">
        select
        `access_id`
        from
        <include refid="TableName" />
        where
        `role_id` = #{roleId}
        and
        `del_flag` = 0;
    </select>

    <select id="getAccesses4RoleIds" resultType="com.dylan.licence.entity.Access">
        select
            lgc_access.*
        from
            lgc_access
        where
            lgc_access.id in
            (select
                 role_access.access_id
             from
                 role_access
             where
                 role_access.role_id
             in
             <foreach collection="ids" item="id" index="index" open="(" close=")" separator=",">
                 #{id}
             </foreach>
             )
        and
            del_flag = 0
    </select>

    <update id="logicalDeletionById">
        update
        <include refid="TableName" />
        set
        `del_flag` = 1
        where
        `id` = #{id}
    </update>

</mapper>