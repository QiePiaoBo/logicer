<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dylan.chat.dal.mapper.TeamMapper">
    <resultMap id="teamMap" type="com.dylan.chat.dal.entity.TeamEntity">
    </resultMap>

    <sql id="Table_Fields">
        id, team_name, team_owner_id, created_at, updated_at, del_flag
    </sql>

    <sql id="Table_Name">
        `lgc_talk_team`
    </sql>

    <select id="getTeamByTeamName" resultType="com.dylan.chat.dal.entity.TeamEntity">
        select <include refid="Table_Fields" />
        from <include refid="Table_Name" />
        where team_name = #{teamName}
    </select>


</mapper>